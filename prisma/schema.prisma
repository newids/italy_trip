
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?   // Hashed password
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  accounts      Account[]
  sessions      Session[]
  trips         Trip[]
  
  // For WebAuthn / Passkeys
  authenticators Authenticator[]
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// For WebAuthn
model Authenticator {
  credentialID         String  @unique
  userId               String
  providerAccountId    String
  credentialPublicKey  String
  counter              Int
  credentialDeviceType String
  credentialBackedUp   Boolean
  transports           String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, credentialID])
}

model Trip {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  title       String
  subtitle    String?
  startDate   DateTime
  endDate     DateTime
  description String?
  isPublic    Boolean   @default(false)
  features    String?   // JSON string for random features/tags
  
  days        Day[]
  bookings    Booking[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Day {
  id          String     @id @default(cuid())
  tripId      String
  trip        Trip       @relation(fields: [tripId], references: [id], onDelete: Cascade)
  dayNumber   Int
  date        DateTime
  title       String
  city        String?
  transport   String?
  
  activities  Activity[]
  highlights  Highlight[]
  accommodation Accommodation?
}

model Activity {
  id          String   @id @default(cuid())
  dayId       String
  day         Day      @relation(fields: [dayId], references: [id], onDelete: Cascade)
  order       Int
  description String
  type        String?
  location    String?
  time        String?
  images      String?  // JSON string of image URLs
  links       String?  // JSON string of related links
}

model Highlight {
  id          String @id @default(cuid())
  dayId       String
  day         Day    @relation(fields: [dayId], references: [id], onDelete: Cascade)
  type        String
  content     String
}

model Accommodation {
  id          String  @id @default(cuid())
  dayId       String  @unique
  day         Day     @relation(fields: [dayId], references: [id], onDelete: Cascade)
  name        String
  link        String?
  note        String?
}

model Booking {
  id          String   @id @default(cuid())
  tripId      String
  trip        Trip     @relation(fields: [tripId], references: [id], onDelete: Cascade)
  type        String
  title       String
  details     String
  confirmationCode String?
  provider    String?
  date        DateTime?
}
